  <style>
    
  .cool-text-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      margin-top: 10vh;
      margin-left: auto; 
      margin-right: auto; 
    }
    
    .text-wrapper {
      text-align: left;
      display: inline-block;
    }
    
    h1 {
      color: #C2BAC1;
      font-size: 11vw;
      font-weight: bold;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
    }
    
    .small-text-left {
      color: #486C88; 
      font-size: 3vw;
      margin-bottom: -4vw; 
      font-weight: bold;
      font-style: italic; 
    }
    
    .small-text-right {
      color: #486C88; 
      font-size: 3vw;
      align-self: flex-end;
      text-align: right;
      margin-top: -4vw; 
      font-weight: bold;
      font-style: italic; 
    }

  .animated-gradient-text {
      background: linear-gradient(60deg, red, purple, red);
      background-size: 200% auto;
      color: #fff;
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: gradient 12s linear infinite; 
    }
    
    @keyframes gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .scroll-down {
      display: block;
      text-align: center;
      margin-top: 10vh;
      color: #C2BAC1; 
      text-decoration: none;
      transition: transform 0.3s ease;
    }

    .scroll-down:hover {
      transform: scaleX(1.2);
    }

    .scroll-down svg {
      stroke: currentColor;
    }

    @media (max-width: 992px) {
    h1 {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-size: 19vw;
    }

    .small-text-left, .small-text-right {
      display: block;
      text-align: center;
      font-size: 6vw; 
    }
  }
  </style>



